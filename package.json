{
  "name": "project_management_api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "install:hadolint": "chmod +x ./install-hadolint.sh && ./install-hadolint.sh",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:staged": "lint-staged",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:create": "cross-var ts-node node_modules/typeorm/cli.js migration:create ./src/database/migrations/$npm_config_name",
    "migration:generate": "cross-var ts-node node_modules/typeorm/cli.js migration:generate ./src/database/migrations/$npm_config_name -d src/common/utils/datasource.ts",
    "migrate": "ts-node node_modules/typeorm/cli.js migration:run -d src/common/utils/datasource.ts",
    "migration:down": "ts-node node_modules/typeorm/cli.js migration:revert -d src/common/utils/datasource.ts"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint \"{src,apps,libs,test}/**/*.ts\""
    ],
    "*.{yml,yaml}": [
      "prettier --write",
      "yamllint *.{yaml,yml}"
    ],
    "Dockerfile": [
      "yarn install:hadolint && hadolint Dockerfile"
    ]
  },
  "dependencies": {
    "@keyv/redis": "5.1.2",
    "@nestjs/cache-manager": "3.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/swagger": "^7.4.0",
    "@nestjs/typeorm": "^10.0.2",
    "@types/multer": "^1.4.12",
    "@types/uuid": "^10.0.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.4",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "cache-manager": "7.2.2",
    "cache-manager-ioredis": "2.1.0",
    "cache-manager-redis-store": "2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cloudinary": "^2.5.0",
    "cross-var": "^1.1.0",
    "dotenv": "^16.4.5",
    "fast-csv": "^5.0.2",
    "ioredis": "5.4.1",
    "mime-types": "^3.0.2",
    "moment": "^2.30.1",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.12.0",
    "redis": "4.7.0",
    "reflect-metadata": "^0.2.0",
    "request": "^2.88.2",
    "rxjs": "^7.8.1",
    "slugify": "^1.6.6",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20",
    "ua-parser-js": "^2.0.3",
    "uuid": "^10.0.0",
    "zeptomail": "^7.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/amqplib": "^0.10.5",
    "@types/bcrypt": "^5.0.2",
    "@types/cache-manager-redis-store": "2.0.4",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/request": "^2.48.13",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "branch-name-lint": "^2.1.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "4.3.0",
    "jest": "^29.5.0",
    "lint-staged": "10.4.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "yaml-lint": "1.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
